            clusters = [c for c in GENT_SLURM_COMPUTE_CLUSTERS
                if c in GENT_PRODUCTION_COMPUTE_CLUSTERS + GENT_PILOT_COMPUTE_CLUSTERS
            ]


VSC_ALL_GENT_COMPUTE_CLUSTERS = GENT_PRODUCTION_COMPUTE_CLUSTERS + GENT_PILOT_COMPUTE_CLUSTERS + \
                                GENT_TEST_COMPUTE_CLUSTERS + GENT_TIER1_COMPUTE_CLUSTERS

